@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<div class="text-right">
    <a asp-action="Index" asp-controller="Cart" class="btn btn-warning">Shooping Cart</a>
</div>

<div class="text-left">
    <a asp-action="Create" asp-controller="Products" class="btn btn-primary">Add</a>
</div>

<div class="form-group">
    <form asp-controller="Products" asp-action="Index" method="post">
        <p>
            Name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
     </form>    
</div>

<table class="table table-hover table-bordered table-striped">
    <tr>
        <th>@Html.DisplayNameFor(x=>x.Id)</th>
        <th>@Html.DisplayNameFor(x=>x.ProductName)</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ProductName</td>
            <td>
                <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-link btn-primary ">Details</a>
                <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                <a asp-action="AddtoCart" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-warning">Add to Cart</a>
            </td>
        </tr>
    }
</table>