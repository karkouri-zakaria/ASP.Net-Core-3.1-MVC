@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="text-right">
    <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Add</a>
</div>

<table class="table table-hover table-bordered table-striped">
    <tr>
        <th>@Html.DisplayNameFor(x=>x.ProductName)</th>
        <th>@Html.DisplayNameFor(x=>x.Price)</th>
        <th>@Html.DisplayNameFor(x=>x.Quantity)</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-link btn-primary ">Show more</a>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>