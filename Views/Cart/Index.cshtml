@model IEnumerable<CartRow>;

@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>
<h1></h1>

<div class="text-right">
    <a asp-action="Index" asp-controller="Products" class="btn btn-primary">Add to Cart</a>
</div>


<table class="table table-hover table-bordered table-striped">
    <tr>
        <th>Porduct</th>
        <th>@Html.DisplayNameFor(x=>x.Quantity)</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-link btn-primary ">Details</a>
                <a asp-action="Edit" asp-controller="Cart" asp-route-id="@item.Id" asp-route-cartid="@item.CartId" class="btn btn-info">Edit</a>
                <a asp-action="Delete" asp-controller="Cart" asp-route-id="@item.Id" asp-route-cartid="@item.CartId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>